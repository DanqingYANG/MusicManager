<Window x:Class="MusicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicManager" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="369*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <TreeView Grid.Column="0" Grid.Row="0" 
                  x:Name="FolderTreeView" 
                  Margin="10,10,5,10">
            <TreeView.ContextMenu>
                <ContextMenu x:Uid="File Explorer">
                    <MenuItem Header="Add folder"></MenuItem>
                    <MenuItem Header="Delete"></MenuItem>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
        <Label Grid.Column="0" Grid.Row="1" 
               Margin="4,0,10,29" 
               Content="Current IndexPath:" 
               Height="33"
               VerticalAlignment="Bottom"
               />
        <Button Grid.Column="0" Grid.Row="1" 
                x:Name="buttonModifyIndex" 
                Content="Add Folder" 
                Margin="10,0,0,64" 
                Height="27" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" Width="279" Click="buttonModifyIndex_Click"
                />
        <DataGrid Grid.Column="1" Grid.Row="0" 
                  Margin="5,10,10,10" 
                  MinWidth="483" 
                  MinHeight="349"
                  />
        <TextBox x:Name="TextBox_MusicFileTypesInput" Grid.Column="1" Grid.Row="1" 
                 Margin="5,0,10,14" 
                 Height="22" 
                 TextWrapping="Wrap" 
                 Text="ape, cue, mp3" 
                 VerticalAlignment="Bottom" 
                 />
        <Label Grid.Column="1" Grid.Row="1" 
               Content="Filetypes : " 
               HorizontalAlignment="Left" 
               Height="33" 
               Margin="5,0,0,29" 
               VerticalAlignment="Bottom" 
               Width="200" 
               />
        <Button Grid.Column="1"  Grid.Row="1" 
                x:Name="buttonOpenMusic" 
                Content="AirPlay" 
                Height="27" 
                Margin="5,0,8,64" 
                VerticalAlignment="Bottom" Click="buttonOpenMusic_Click" 
                />
        <TextBox x:Name="TextBox_IndexFolderPath" Margin="10,64,10,14" Grid.Row="1" TextWrapping="Wrap" Text="F:\music" />
    </Grid>
</Window>